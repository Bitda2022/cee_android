<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <View
        android:id="@+id/set_tabbar_v"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:fontFamily="@font/sf_bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/set_tabbar_v"
        app:layout_constraintEnd_toEndOf="@id/set_tabbar_v"
        app:layout_constraintTop_toTopOf="@id/set_tabbar_v"
        app:layout_constraintBottom_toBottomOf="@id/set_tabbar_v" />

    <!--설정-->

    <ImageView
        android:id="@+id/set_speed_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_set_speed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_tabbar_v"
        android:layout_marginTop="84dp"
        android:layout_marginStart="28dp"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/set_speed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTS빠르기"
        app:layout_constraintStart_toStartOf="@id/set_speed_iv"
        app:layout_constraintBottom_toBottomOf="@id/set_speed_iv"
        app:layout_constraintTop_toTopOf="@id/set_speed_iv"
        android:layout_marginStart="61dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_semibold"
        android:textSize="25dp"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/setting_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/set_speed_tv"
        app:layout_constraintBottom_toBottomOf="@id/set_speed_tv"
        app:layout_constraintStart_toEndOf="@id/set_speed_tv"
        android:text=":"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginStart="20dp"
        android:importantForAccessibility="no"/>

    <SeekBar
        android:id="@+id/set_speed_sk"
        android:layout_width="281dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/set_speed_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:max="10"
        android:progress="0"
        android:thumb="@drawable/seekbar_theme_thumb"
        android:progressDrawable="@drawable/seekbar_theme"
        android:contentDescription="빠르기"/>


    <!--설정-->

    <ImageView
        android:id="@+id/set_tuto_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_set_tuto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_speed_iv"
        android:layout_marginTop="70dp"
        android:layout_marginStart="28dp"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/set_tutorial_again_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="튜토리얼 다시보기"
        app:layout_constraintStart_toStartOf="@id/set_tuto_iv"
        app:layout_constraintBottom_toBottomOf="@id/set_tuto_iv"
        app:layout_constraintTop_toTopOf="@id/set_tuto_iv"
        android:layout_marginStart="61dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_semibold"
        android:textSize="25dp"
        />

    <!--업데이트-->

    <ImageView
        android:id="@+id/set_update_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_set_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_tuto_iv"
        android:layout_marginTop="70dp"
        android:layout_marginStart="28dp"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/set_update_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업데이트 확인"
        app:layout_constraintStart_toStartOf="@id/set_update_iv"
        app:layout_constraintBottom_toBottomOf="@id/set_update_iv"
        app:layout_constraintTop_toTopOf="@id/set_update_iv"
        android:layout_marginStart="61dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_semibold"
        android:textSize="25dp"/>




    <!--만남-->

    <ImageView
        android:id="@+id/set_contact_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_set_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_update_iv"
        android:layout_marginTop="70dp"
        android:layout_marginStart="28dp"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/set_contact_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        app:layout_constraintStart_toStartOf="@id/set_contact_iv"
        app:layout_constraintBottom_toBottomOf="@id/set_contact_iv"
        app:layout_constraintTop_toTopOf="@id/set_contact_iv"
        android:layout_marginStart="61dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_semibold"
        android:textSize="25dp"
        android:importantForAccessibility="no"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_contact_tv"
        app:layout_constraintStart_toStartOf="@id/set_contact_tv"
        android:autoLink="email"
        android:text="zosel154@naver.com"
        android:textSize="25sp"
        android:contentDescription="Contact. 두번 탭하여 이메일 창으로 이동하실 수 있습니다."/>



</androidx.constraintlayout.widget.ConstraintLayout>