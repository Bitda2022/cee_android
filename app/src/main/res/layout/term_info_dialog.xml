<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/term_info_dialog_cl"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:background="@drawable/dialog_background_radius"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/term_info_dialog_term_name_tv"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/term_info_dialog_line_after_term_name"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:text="생산"
                android:fontFamily="@font/sf_bold">

            </TextView>

            <View
                android:id="@+id/term_info_dialog_line_after_term_name"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/term_info_dialog_term_name_tv"
                android:background="@drawable/button_rectangle_color">

            </View>


            <TextView
                android:id="@+id/term_info_dialog_term_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                android:text="대충설명들입니다
아아아아ㅏ앙
아아ㅏㅇ아ㅏ아"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_semibold"
                app:layout_constraintBottom_toTopOf="@id/term_info_dialog_line_after_term_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/term_info_dialog_line_after_term_name">

            </TextView>

            <View
                android:id="@+id/term_info_dialog_line_after_term_content"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_rectangle_color"
                app:layout_constraintTop_toBottomOf="@id/term_info_dialog_term_content_tv"
                tools:layout_editor_absoluteX="3dp">

            </View>



            <TextView
                android:id="@+id/term_info_dialog_example_tv"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/term_info_dialog_listen_again_tv"
                app:layout_constraintTop_toBottomOf="@id/term_info_dialog_line_after_term_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:text="대충예시들이 이렇지 않을까요?
좀 길겠음"
                android:fontFamily="@font/sf_semibold">

            </TextView>

            <TextView
                android:id="@+id/term_info_dialog_listen_again_tv"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/term_info_dialog_example_tv"
                android:text="문제 다시 듣기"
                android:background="@drawable/button_rectangle_color"
                android:padding="5dp"
                android:fontFamily="@font/sf_bold">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>