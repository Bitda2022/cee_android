<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/invest"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/sf_bold"
        android:gravity="center"
        android:background="@color/gray"
        android:id="@+id/study_title_tv"/>

    <ImageView
        android:id="@+id/invest_final_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/button_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="142dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/invest_final_bg"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_rectangle_gray"
        android:id="@+id/invest_final_cl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최종결과"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_bold"
            android:textSize="22dp"
            app:layout_constraintTop_toTopOf="@id/invest_final_cl"
            app:layout_constraintBottom_toBottomOf="@id/invest_final_cl"
            app:layout_constraintEnd_toEndOf="@id/invest_final_cl"
            app:layout_constraintStart_toStartOf="@id/invest_final_cl"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/invest_final_grade_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_set_contact"
        app:layout_constraintTop_toBottomOf="@id/invest_final_cl"
        app:layout_constraintStart_toStartOf="@id/invest_final_bg"
        app:layout_constraintEnd_toEndOf="@id/invest_final_bg"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/invest_final_grade_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주린이"
        android:fontFamily="@font/sf_bold"
        app:layout_constraintStart_toStartOf="@id/invest_final_bg"
        app:layout_constraintEnd_toEndOf="@id/invest_final_bg"
        app:layout_constraintTop_toBottomOf="@id/invest_final_grade_iv"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/invest_final_hr"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@id/invest_final_bg"
        app:layout_constraintEnd_toEndOf="@id/invest_final_bg"
        app:layout_constraintTop_toBottomOf="@id/invest_final_grade_tv"
        android:layout_marginTop="23dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/invest_final_summary_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="투자요약"
        android:fontFamily="@font/sf_bold"
        app:layout_constraintStart_toStartOf="@id/invest_final_hr"
        app:layout_constraintTop_toBottomOf="@id/invest_final_hr"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>