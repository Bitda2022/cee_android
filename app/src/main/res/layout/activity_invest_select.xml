<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity.InvestSelectActivity">


    <TextView
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/invest_title"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/sf_bold"
        android:gravity="center"
        android:background="@color/gray"
        android:id="@+id/invest_title_tv"/>

    <TextView
        android:id="@+id/activity_invest_select_day_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/invest_title_tv"
        android:text="1일차"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/activity_invest_select_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_invest_select_day_tv"
        android:text="매도/ 매수 할 주식을 선택해주세요"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/activity_invest_select_exsiting_coin_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_invest_select_info_tv"
        android:text="보유 코인 : 100코인"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <LinearLayout
        android:id="@+id/activity_invest_select_ll"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_invest_select_exsiting_coin_tv"

        android:orientation="vertical">



        <TextView
            android:id="@+id/activity_invest_select_company1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/sf_bold"
            android:textSize="20dp"
            android:layout_height="0dp"
            android:text="제약기업"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_rectangle"

            />

        <TextView
            android:id="@+id/activity_invest_select_company2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/sf_bold"
            android:textSize="20dp"
            android:layout_height="0dp"
            android:text="환경기업"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_rectangle"

            />
        <TextView
            android:id="@+id/activity_invest_select_company3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/sf_bold"
            android:textSize="20dp"
            android:layout_height="0dp"
            android:text="항공기업"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_rectangle"

            />
        <TextView
            android:id="@+id/activity_invest_select_company4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/sf_bold"
            android:textSize="20dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="적금"
            android:textColor="@color/white"
            android:background="@drawable/button_rectangle"

            />


    </LinearLayout>

    <Button
        android:id="@+id/activity_invest_select_complete_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_invest_select_ll"
        android:text="완료"
        android:textColor="@color/white"
        android:background="@drawable/buttom_round"
        android:fontFamily="@font/sf_bold"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp">
    </Button>








</androidx.constraintlayout.widget.ConstraintLayout>