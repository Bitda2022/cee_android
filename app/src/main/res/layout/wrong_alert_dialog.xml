<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_radius"
    android:layout_gravity="center"
    android:paddingHorizontal="50dp"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/wrong_dialog_title_tv"
        app:layout_constraintTop_toTopOf="@id/wrong_dialog_title_tv"
        app:layout_constraintEnd_toStartOf="@id/wrong_dialog_title_tv"

        android:layout_marginEnd="5dp"
        android:src="@drawable/wrong_dialog_close_btn"
        >

    </ImageView>

    <TextView
        android:id="@+id/wrong_dialog_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="20dp"

        android:textColor="@color/white"
        android:text="오답"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/wrong_dialog_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/wrong_dialog_title_tv"
        app:layout_constraintEnd_toEndOf="@id/wrong_dialog_title_tv"
        app:layout_constraintTop_toBottomOf="@id/wrong_dialog_title_tv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="오답입니다"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>