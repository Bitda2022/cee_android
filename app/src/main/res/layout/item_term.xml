<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_term_page_tv"
        android:layout_marginBottom="50dp"
        android:contentDescription="ㅤ">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                android:text="생산"
                android:textSize="22dp"
                android:fontFamily="@font/sf_bold"
                android:textColor="@color/white"
                android:id="@+id/item_term_name_tv"
                android:importantForAccessibility="no"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/item_term_name_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/line"
                android:id="@+id/item_term_line1"
                android:importantForAccessibility="no"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_term_line1"
                android:layout_marginTop="70dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:text="대충 예시 대충 예시 대충 예시 대충 예시 대충 예시 대충 예시 대충 예시 대충 예시 대충 예시"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:fontFamily="@font/sf_medium"
                android:id="@+id/item_term_description_tv"
                android:importantForAccessibility="no"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/item_term_description_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/line"
                android:id="@+id/item_term_line2"
                android:importantForAccessibility="no"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="105dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_term_line2"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_rectangle_gray"
                android:id="@+id/item_term_step_cl"
                android:importantForAccessibility="no">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_footstep"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="13dp"
                    android:importantForAccessibility="no"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one_more_step"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sf_bold"
                    android:textSize="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="17dp"
                    android:importantForAccessibility="no"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_term_line2"
                android:layout_marginTop="90dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:text="대충 예시 대충 예시 대충 예시 대충 예시 대충 예시 대충 예시 대충 예시 대충 예시 대충 예시"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:fontFamily="@font/sf_medium"
                android:id="@+id/item_term_examples_tv"
                android:importantForAccessibility="no"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:fontFamily="@font/sf_medium"
        android:id="@+id/item_term_page_tv"
        android:importantForAccessibility="no"/>

</androidx.constraintlayout.widget.ConstraintLayout>